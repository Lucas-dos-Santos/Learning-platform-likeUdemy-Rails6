%h1 
  Courses
  = @courses.count

.row
  .row-cols-2
    .form-inline
      = search_form_for @q do |f|
        = f.search_field :title_cont, placeholder: 'title'
        = f.search_field :short_description_cont, placeholder: 'description'
        = f.collection_select :language_eq, @languages, :first, :last, {include_blank: true, selected: @language_selected}, placeholder: 'language'
        = f.collection_select :level_eq, @levels, :first, :last, {include_blank: true, selected: @level_selected}, placeholder: 'level'
        = f.search_field :price_eq, placeholder: 'price'
        = f.submit
      .ml-2
      = link_to courses_path, class: 'btn btn-sm btn-secondary' do
        .fa.fa-sync
  .row-cols-10
    - @courses.each do |course|
      = render 'course', course: course